{% extends "base.jinja2" %}

{% block extra_head %}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
    <section class="card">
        <h2>Добавить запрос</h2>
        <form method="post" action="/queries">
            <label for="phrase">Текст запроса</label>
            <textarea id="phrase" name="phrase" rows="3" required></textarea>
            <div class="form-actions">
                <button type="submit">Сохранить</button>
            </div>
        </form>
    </section>

    <section class="card">
        <h2>Запросы</h2>
        {% if not queries %}
            <p>Запросы ещё не добавлены.</p>
        {% else %}
            <table id="queries-table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Запрос</th>
                    <th>Каналов</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for query in queries %}
                    <tr>
                        <td><code>{{ query.id }}</code></td>
                        <td><a class="table-link" href="/queries/{{ query.id }}">{{ query.phrase }}</a></td>
                        <td>{{ query.channel_count }}</td>
                        <td class="actions">
                            <form class="inline" method="post" action="/queries/{{ query.id }}/delete"
                                  onsubmit="return confirm('Удалить запрос?');">
                                <button class="secondary" type="submit">Удалить</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </section>
{% endblock %}

{% block extra_scripts %}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tableEl = document.querySelector("#queries-table");
            if (tableEl && window.simpleDatatables) {
                new simpleDatatables.DataTable(tableEl, {
                    searchable: true,
                    perPageSelect: false,
                    perPage: -1,
                });
            }
        });
    </script>
{% endblock %}
